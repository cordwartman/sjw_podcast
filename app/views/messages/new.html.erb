<div class="container">
  <h2>Contact the Social Justice Warriors</h2>
  <%= form_for @message, url: create_message_url do |f| %>
    <%= notice %>
    <%= @message.errors.full_messages.join(', ') %>
    <div class="form-group">
      <h4>Name:</h4>
        <%= f.text_field :name, placeholder: 'Enter name' %>
    </div>
    <div class="form-group">
      <h4>Email:</h4>
      <%= f.email_field :email, placeholder: 'Enter email' %>
    </div>
    <div class="form-group">
      <h4>Message:</h4>
        <%= f.text_area :body, placeholder: 'Enter message' %>
    </div>
    <%= f.submit 'Send' %>
  <% end %>
</div>
